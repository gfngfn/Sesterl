
module SendTemp = struct

  type bintree<$a> =
    | Node($a, bintree<$a>, bintree<$a>)
    | Empty

  let bintree_of_int(n : int) =
    letrec aux(top, n) =
    if n <= 0 then
      Empty
    else
      let n1 = (n - 1) / 2 in
      let n2 = (n - 1) - n1 in
      let tr1 = aux(top + 1, n1) in
      let tr2 = aux(top + n1 + 1, n2) in
      Node(top, tr1, tr2)
    in
    aux(1, n)

end
